@model ContactModel

@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/style.css" />
<div class="contact-us-container">
    <h1>Contact Us</h1>
    <p>Have questions or feedback? Reach out to us using the form below:</p>
    <form method="post" class="contact-form" asp-controller="Contact" asp-action="SubmitMessage">
        <label for="name">Name:</label>
        <input type="text" id="name" name="Name" value="@Model.Name" />
        <span asp-validation-for="Name" class="text-danger"></span>

        <label for="email">Email:</label>
        <input type="email" id="email" name="Email" value="@Model.Email" />
        <span asp-validation-for="Email" class="text-danger"></span>

        <label for="message">Message:</label>
        <textarea id="message" name="Message">@Model.Message</textarea>
        <span asp-validation-for="Message" class="text-danger"></span>

        <button type="submit">Submit</button>
    </form>
</div>
